!!!
%html
	%head
		%title Sound Off
		= stylesheet_link_tag "widget", :media => "all"
		:javascript
			var $oundoff_config = #{ ( @config || {} ).to_json }
		= javascript_include_tag "angular.min"
		= javascript_include_tag "widget"
		= javascript_include_tag '//platform.twitter.com/widgets.js'
		= csrf_meta_tags
		- if params[:style] == 'dark'
			%meta(name="twitter:widgets:theme"content="dark")


	%body{ :class => @body_class, :onLoad => 'loadIntents()' }
		#main{ "ng-app" => true, "ng-controller" => 'widgetScope'  }
			%h3.take_action TAKE ACTION
			#header
				= image_tag ( 'SoundOffBlack.svg' ) , { :class => 'logo'}
				= image_tag ( 'SoundOffWhite.svg' ) , { :class => 'logo_hover' }
				%h1= '#'+params[:hashtag]


				%button#button
					Tweet @
					%br
					= @button
			#content
				.tweet{ 'ng-repeat' => 'tweet in tweets' }
					%a.follow_button{ :href => 'https://twitter.com/{{tweet.user.screen_name}}', :target => '_blank' }
						.bird
						Follow
					%img.profile_img{ 'ng-src' => '{{tweet.user.profile_image_url}}', :onerror => 'this.src = "https://abs.twimg.com/sticky/default_profile_images/default_profile_6.png"' }
					%h2 {{tweet.user.name }}
					%h3 @{{tweet.user.screen_name }}

					%blockquote.twitter-tweet
						%p {{ tweet.text }}
						%a{ :href =>  "https://twitter.com/{{tweet.user.screen_name }}/status/{{tweet.id_str}}", :target => '_blank' }
							{{  tweet.created_at | date: 'h:mm a - MMM d yyyy' }}

					.buttons
						%span
							%a.reply{ :href => 'https://twitter.com/intent/tweet?in_reply_to={{tweet.id_str}}', :target => '_blank' }
						%span
							%a.retweet{ :href => 'https://twitter.com/intent/retweet?tweet_id={{tweet.id_str}}', :target => '_blank' }
						%span
							%a.favorite{ :href => 'https://twitter.com/intent/favorite?tweet_id={{tweet.id_str}}', :target => '_blank' }


		#attribute
			powered by
			%a{ :href=> 'http://headcount.org', :target => '_blank' } HeadCount.org
