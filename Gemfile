  gem 'sass-rails',   '~> 3.2.3'
  gem 'bootstrap-sass', '~> 2.3.1.0'
  gem 'compass-rails'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'exception_notification'

group :development, :test do
  gem "byebug"
  gem 'dotenv-rails'
end

